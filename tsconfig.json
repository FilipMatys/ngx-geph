{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "downlevelIteration": true,
    "module": "es2020",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "select": [
        "dist/select"
      ],
      "tabs": [
        "dist/tabs"
      ],
      "accordion": [
        "dist/accordion"
      ],
      "pagination": [
        "dist/pagination"
      ],
      "list": [
        "dist/list"
      ],
      "icon": [
        "dist/icon"
      ],
      "collapsible": [
        "dist/collapsible"
      ],
      "table": [
        "dist/table"
      ],
      "card": [
        "dist/card"
      ],
      "input": [
        "dist/input"
      ],
      "calendar": [
        "dist/calendar"
      ],
      "layout": [
        "dist/layout"
      ],
      "spreadsheet": [
        "dist/spreadsheet/spreadsheet",
        "dist/spreadsheet"
      ],
      "toggle": [
        "dist/toggle/toggle",
        "dist/toggle"
      ],
      "tree": [
        "dist/tree/tree",
        "dist/tree"
      ],
      "tooltip": [
        "dist/tooltip/tooltip",
        "dist/tooltip"
      ],
      "datepicker": [
        "dist/datepicker/datepicker",
        "dist/datepicker"
      ],
      "dialog": [
        "dist/dialog/dialog",
        "dist/dialog"
      ],
      "drawer": [
        "dist/drawer/drawer",
        "dist/drawer"
      ],
      "form": [
        "dist/form/form",
        "dist/form"
      ]
    }
  }
}